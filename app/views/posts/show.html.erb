<main class="flex flex-col justify-center gap-8 mx-6 md:mx-auto max-w-2xl mt-8">
    <h1 class="text-2xl font-bold mr-1">
        <%= @post.title %>
        <br>
    </h1>
    

    <button data-controller="copy-url" data-action="click->copy-url#copy"
            class="p-2 bg-blue-300 rounded-xl textbold text-white hover:bg-blue-400"
            data-url="<%= post_url(@post)%>">
        Copy Post URL
    </button>

    <p class="text-md text-justify">
        <%= @post.content%>
    </p>
    <% if @post.cover.attached? %>
        <%= image_tag(@post.cover) %>
    <%else%>
        <p>no image</p>
    <% end %>
    <p>Posted by: <%= @post.user.email %></p>

</main>


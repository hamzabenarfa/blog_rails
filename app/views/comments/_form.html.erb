<%= form_with(model: [post, post.comments.build]) do |f|%>
   <div class="flex flex-col space-y-4">
    <%= f.rich_text_area :body, class: "border rounded-lg p-4 focus:outline-none focus:border-blue-400" %>
    <%= f.submit "Reply", class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
  </div>
<% end%>
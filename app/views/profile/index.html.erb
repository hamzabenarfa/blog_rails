<section class="min-h-screen container mx-40 mt-10">
  <% @posts.each do |post| %>
    <div class="flex flex-col bg-white shadow-md gap-2 p-6 rounded-xl max-w-2xl">
      <h2 class="text-2xl font-medium mr-1"><%= link_to post.title, post %></h2>
      <p class="text-md">
        <%= truncate(post.content, length: 400) %>
      </p>
    </div>
  <% end %>
</section>
<section class="container max-w-4xl mx-auto mt-10 px-4">

  <h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field  :first_name, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
        <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :last_name, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-medium text-sm text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 block w-full border rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium text-sm text-gray-700" %> <span class="text-gray-500 text-sm">(leave blank if you don't want to change it)</span>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 p-2 block w-full border rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      <% if @minimum_password_length %>
        <div class="mt-1 text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block font-medium text-sm text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 p-2 block w-full border rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, class: "block font-medium text-sm text-gray-700" %> <span class="text-gray-500 text-sm">(we need your current password to confirm your changes)</span>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 p-2 block w-full border rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :profile_picture, class: "block font-medium text-sm text-gray-700" %>
      <div class="mt-1 flex items-center">
        <%= f.file_field :profile_picture, class: "hidden", id: "profile_picture" %>
        <label for="profile_picture" class=" inline-flex items-center px-4 py-2 border border-transparent rounded-md font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Choose a file
        </label>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit "Update", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md font-semibold text-white bg-green-600 hover:bg-green-700 hover:cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>

  <% end %>

  <h3 class="text-xl font-bold mt-8 mb-2">Cancel my account</h3>

  <div class="mb-4">
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md font-semibold text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>

  <%#= link_to "Back", :back, class: "text-indigo-600 hover:text-indigo-700" %>

</section>
